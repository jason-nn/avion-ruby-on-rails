<table>
    <thead>
        <tr>
            <th>Count</th>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% ctr = 1 %> <% @articles.each do |article| %>
        <tr>
            <td><%= ctr %></td>
            <td><%= article.id %></td>
            <td><%= article.name %></td>
            <td><marquee><%= "Class: #{article.class}" %></marquee></td>
            <td><%= article.body %></td>
        </tr>
        <% ctr += 1 %> <% end %>
    </tbody>
</table>

<hr />

<%= @articles.inspect %>

<hr />

<br />

